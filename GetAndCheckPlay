#include "header.h"

char GetAndCheckPlay(char &playerChoice)
{
	cout << "**********************\n";
	cout << "** CHOOSE YOUR PLAY **\n";
	cout << "**********************\n";
	cout << "R - Rock" << endl;
	cout << "P - Paper" << endl;
	cout << "S - Scissors" << endl;

	cout << "Enter your play: ";
	cin.get(playerChoice);
	playerChoice = toupper(playerChoice);
	cin.ignore(1000,'\n');

	if(playerChoice == 'R'|| playerChoice == 'P'|| playerChoice == 'S')
	{
		cout << endl;
	}
	else
	{
		cout << "** INVALID INPUT - Please Enter (R, P, or S) **\n";
		cout << endl;
		cout << "R - Rock" << endl;
		cout << "P - Paper" << endl;
		cout << "S - Scissors" << endl;

		cout << "Enter your play: ";
		cin.get(playerChoice);
		playerChoice = toupper(playerChoice);
		cin.ignore(1000,'\n');
	}
	return playerChoice;
}
